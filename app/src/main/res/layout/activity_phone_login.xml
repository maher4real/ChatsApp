<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:id="@+id/grad_layout3"
    android:background="@drawable/gradient_list"
    android:layout_centerVertical="true"
    tools:context=".PhoneLoginActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
    <EditText
        android:id="@+id/phone_number_input"
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="17dp"
        android:layout_marginEnd="17dp"
        android:layout_marginTop="180dp"
        android:background="@drawable/rounded_rect"
        android:padding="8dp"
        android:hint="Enter your phone number here"
        android:textColor="@color/colorSplash"
        android:inputType="phone"
        android:textColorHint="@color/colorAccent"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:drawableStart="@drawable/phone"
        android:textAlignment="center"
        />

    <EditText
        android:id="@+id/verification_code_input"
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="17dp"
        android:layout_marginEnd="17dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/rounded_rect"
        android:layout_below="@+id/phone_number_input"
        android:padding="5dp"
        android:hint="Enter verification code here"
        android:textColorHint="@color/colorAccent"
        android:textColor="@color/colorSplash"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:drawableStart="@drawable/password"
        android:drawableTint="@color/colorSplash"
        android:textAlignment="center"
        android:visibility="invisible"/>

    <Button
        android:id="@+id/send_ver_code_button"
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/verification_code_input"
        android:text="Send Verification Code"
        android:textAllCaps="false"
        android:layout_marginStart="17dp"
        android:layout_marginEnd="17dp"
        android:layout_marginTop="1dp"
        android:background="@drawable/buttons"
        android:textColor="@android:color/black"
        android:textSize="19sp"
        android:textAlignment="center"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/verify_button"
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/send_ver_code_button"
        android:layout_centerHorizontal="true"
        android:text="verify"
        android:textAllCaps="false"
        android:layout_marginStart="17dp"
        android:layout_marginEnd="17dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/buttons"
        android:textColor="@android:color/black"
        android:textSize="19sp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:visibility="invisible"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Â© ChatsApp"
        android:textColor="@color/colorSplash"
        android:layout_marginTop="690dp"
        android:textAlignment="center"
        android:fontFamily="sans-serif-thin"
        />

</RelativeLayout>

    </ScrollView>

</RelativeLayout>